			<xpath>/Defs/ThingDef[defName="VFED_ImperialUnderfarm"]</xpath>
			<success>Always</success>
			<value>
				<placeWorkers></placeWorkers>
			</value>
		</nomatch>
	</Operation>
	
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
