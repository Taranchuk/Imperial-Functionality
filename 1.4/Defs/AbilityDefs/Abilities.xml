<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<AbilityDef>
		<defName>IF_FormEmpireAlliance</defName>
		<label>Form Alliance with Empire</label>
		<description>Without peer, you are in charge. As the Stellarch of this planet's solar system, use your noble influence to sway the Empire over to your side along with converting them to the beliefs that you follow. This can only be done once.</description>
		<jobDef>CastAbilityOnThing</jobDef>
		<targetRequired>False</targetRequired>
		<canUseAoeToGetTargets>False</canUseAoeToGetTargets>
		<iconPath>World/WorldObjects/Expanding/Empire</iconPath>
		<displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
		<disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
		<cooldownTicksRange>9999999</cooldownTicksRange> <!-- Can only be done once -->
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<warmupTime>0</warmupTime>
			<range>1</range>
			<drawAimPie>False</drawAimPie>
			<requireLineOfSight>False</requireLineOfSight>
			<targetParams>
				<canTargetSelf>true</canTargetSelf>
				<canTargetPawns>false</canTargetPawns>
				<canTargetBuildings>true</canTargetBuildings>
				<canTargetAnimals>false</canTargetAnimals>
				<canTargetHumans>false</canTargetHumans>
				<canTargetMechs>false</canTargetMechs>
			</targetParams>
		</verbProperties>
		<comps>
			<li Class="ImperialFunctionality.CompProperties_FormEmpireAlliance"/>
		</comps>
	</AbilityDef>

